# Project Name
project=$1

if [ ! -n "$project" ]; then
    echo "Project name needed"
    exit 1
fi

# Project Configuration file
file='tmuxConfigurations/'${project}'.conf';

if [ ! -f "$file" ]; then
    echo "Configuration file not found for this project"
    exit 1
fi

# Executing configuration file
tmux -2f $file attach
