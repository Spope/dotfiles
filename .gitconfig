[user]
	email = pinaudt@gmail.com
	name = Thomas Pinaud
[core]
    excludesfile = /home/devserver/homes/thomas/.gitignore
    editor = vim
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
    autosetupmerge = true
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --oneline --decorate
    merge = merge --no-commit
    tree = log --graph --full-history --all --color --date=short --pretty=format:'%Cred%x09%h %Creset%ad%Cblue%d %Creset %s %C(bold)(%an)%Creset'
[merge]
    conflictstyle = diff3
    ;tool = meld
    ;tool = vimdiff
