tmux has-session -t betterise
if [ $? != 0 ]
then
    # Create tmux session
    tmux new-session -s betterise -n Vim -d

    # Set session to workdir
    tmux send-keys -t betterise 'cd /var/www/betterise.dev/betterise/' C-m

    # Open vim into session
    #tmux send-keys -t betterise 'vim' C-m

    # Split window
    tmux split-window -v -p 10 -t betterise

    # Send second pane to workdir
    tmux send-keys -t betterise:1.2 'cd /var/www/betterise.dev/betterise/logs' C-m
    tmux send-keys -t betterise:1.2 'tail -f betterise.log' C-m

    # New window
    tmux new-window -n console -t betterise -n Mongo
    tmux send-keys -t betterise:2 'mongo betterise' C-m

    # Set sesion back on first window and attaching it
    tmux select-window -t betterise:1
fi
tmux attach -t betterise
